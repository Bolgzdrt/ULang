{
  "name": "ulang",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:prod": "concurrently \"npm run serve\" \"npm run server:prod\"",
    "start:dev": "concurrently \"npm run serve\" \"npm run server:dev\"",
    "serve": "npm --prefix client run serve",
    "server:dev": "npm --prefix server run server:dev",
    "server:prod": "npm --prefix server run start",
    "build": "npm --prefix client run build",
    "test:unit": "npm --prefix client run test:unit"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "if-env": "^1.0.4"
  }
}
